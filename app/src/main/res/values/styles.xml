<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_icon_and_text_button_no_background">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">#4E5D78</item>
    </style>

    <style name="small_avatar_style_24x24">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/avatar_oval_background</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="medium_avatar_style_34x34">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/avatar_oval_background</item>
        <item name="android:clipToOutline">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="send_button_styles">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:backgroundTint">#12377DFF</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>

    <style name="LittleTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>