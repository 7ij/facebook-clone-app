<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/merge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/home_page_post">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="16dp"
        android:layout_height="4dp"
        android:src="@drawable/three_dot_menu_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/avatar_oval_background"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/create_post_user_avatar" />

    <TextView
        android:id="@+id/home_page_post_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Prothinidi Thomas"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_page_post_time"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="2d."
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/home_page_post_user_name"
        app:layout_constraintRight_toRightOf="@id/home_page_post_user_name"
        app:layout_constraintTop_toBottomOf="@id/home_page_post_user_name" />


    <TextView
        android:id="@+id/home_page_post_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public"
        app:layout_constraintTop_toTopOf="@id/home_page_post_time"
        app:layout_constraintBottom_toBottomOf="@id/home_page_post_time"
        app:layout_constraintLeft_toRightOf="@id/home_page_post_time"/>
</androidx.constraintlayout.widget.ConstraintLayout>